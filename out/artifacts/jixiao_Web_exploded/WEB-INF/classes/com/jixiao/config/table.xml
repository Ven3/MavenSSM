<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "//UNKNOWN/"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="table">

	<select id="getOracleTab" resultType="String">
		select table_name from user_tables
	</select>

	<select id="getOracleCol" parameterType="String" resultType="map">
		select * from user_tab_columns where table_name = #{tname}
	</select>

	<select id="getMysqlTab" resultType="String">
		select table_name from information_schema.TABLES where TABLE_SCHEMA = "jixiao"
	</select>

	<select id="getMysqlCol" parameterType="String" resultType="map">
		select TABLE_NAME,COLUMN_NAME,DATA_TYPE from information_schema.COLUMNS where TABLE_SCHEMA = "jixiao" and TABLE_NAME = #{tname}
	</select>
</mapper> 